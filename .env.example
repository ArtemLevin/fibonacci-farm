# -------- Core app config --------
ENV=dev
DEBUG=true
LOG_LEVEL=info

# -------- Security / Auth --------
JWT_SECRET=change_me_to_a_long_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# -------- Database --------
# Используется приложением (FastAPI) и alembic
DATABASE_URL=postgresql+asyncpg://algobench:algobench@db:5432/algobench

# Значения ниже использует docker-compose для инициализации контейнера Postgres
POSTGRES_DB=algobench
POSTGRES_USER=algobench
POSTGRES_PASSWORD=algobench

# -------- CORS (dev defaults) --------
CORS_ALLOW_ORIGINS=*

# -------- Rate limiting (placeholder, не используем в спринте 1) --------
RATE_LIMIT_PER_MINUTE=120
